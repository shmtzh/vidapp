

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.vidapp.vidapp.fragment.MakingVideoFragment">

        <EditText
            android:id="@+id/new_video_name"
            android:layout_width="300dp"
            android:hint="MOVIE NAME?"
            android:textSize="25sp"
            android:textColor="@color/gray"
            android:maxLength="12"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:textAlignment="center"
            android:layout_height="60dp"
            android:background="@drawable/ba_date_back"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="15dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:text="save"
            android:textSize="25sp"
            android:textColor="@color/gray"
            android:layout_below="@id/new_video_name"
            android:background="@drawable/ba_date_back"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:padding="15dp" />



        <ImageView
            android:id="@+id/home_image_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/home_back"
            android:padding="15dp"
            android:src="@drawable/home" />
    </RelativeLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vidapp.vidapp.fragment.ChooseClipFragment">

    <ImageView
        android:id="@+id/choose_clips"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/chooseclips_back"
        android:padding="15dp"
        android:src="@drawable/chooseclips" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridview_choosing"
            android:layout_marginEnd="30dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="30dp"
            android:columnWidth="90dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />

        <ImageView
            android:layout_width="100dp"
            android:padding="15dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/done"
            android:id="@+id/done_button"
            android:layout_marginBottom="2dp"
            android:visibility="gone"
            android:background="@drawable/chooseclips_back"
            android:layout_height="60dp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/chooseclips_back"
        android:padding="15dp"
        android:src="@drawable/cancel" />

</LinearLayout>
